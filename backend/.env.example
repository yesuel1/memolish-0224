# 데이터베이스
# Supabase: https://supabase.com → 프로젝트 생성 → Settings → Database → URI 복사
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[REF].supabase.co:5432/postgres

# Google AI (Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud TTS (서비스 계정 JSON 파일 경로)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google_tts_key.json

# AWS S3 (오디오 파일 저장)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=memolish-audio
AWS_REGION=ap-northeast-2

# 앱 설정
CORS_ORIGINS=http://localhost:3000
DAILY_FREE_CREDITS=3
